services:
  radarr:
    image: lscr.io/linuxserver/radarr:latest
    environment:
      - "PUID={{ ansible_user_uid }}"
      - "PGID={{ ansible_user_gid }}"
      - "TZ=America/Chicago"
    volumes:
      - "config:/config"
      - "media-server:/data"
    networks:
      - cloudflared-network
      - prowlarr-network
      - transmission-network
    configs:
      - source: "{{ radarr_config.config_name }}"
        target: /config/config.xml
    ports:
      - 7878
    healthcheck:
      test: ["CMD", "sh", "-c", "wget -q --spider http://127.0.0.1:7878 || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    deploy:
      mode: replicated
      replicas: 1
      labels:
        dev.mattprovost.radarr.domain: "{{ lookup('service_domain', 'radarr') }}"
        dev.mattprovost.radarr.port: 7878
        dev.mattprovost.radarr.access: "true"
        dev.mattprovost.radarr.access.admin: "true"
        dev.mattprovost.radarr.radarr: "true"
      update_config:
        parallelism: 1
        order: start-first
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 60s
      resources:
        limits:
          cpus: "0.5"
          memory: "512M"
        reservations:
          cpus: "0.25"
          memory: "256M"

networks:
  cloudflared-network:
    external: true
  prowlarr-network:
    external: true
  transmission-network:
    external: true

volumes:
  config:
  media-server:
    external: true

configs:
  {{ radarr_config.config_name }}:
    external: true
