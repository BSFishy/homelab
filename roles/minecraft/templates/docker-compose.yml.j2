services:
  mc:
    image: itzg/minecraft-server
    networks:
      - cloudflared-network
    ports:
      - "25565:25565"
    environment:
      EULA: "TRUE"
      MEMORY: "4096M"
      MOTD: "goontown"
      TZ: "America/Chicago"
      DIFFICULTY: "2"
      SPAWN_PROTECTION: "0"
      ENABLE_AUTOPAUSE: "FALSE"
    deploy:
      mode: replicated
      replicas: 1
      labels:
        dev.mattprovost.mc.domain: "{{ lookup('service_domain', 'mc') }}"
        dev.mattprovost.mc.port: 25565
        dev.mattprovost.mc.protocol: "tcp"
    volumes:
      # attach the relative directory 'data' to the container's /data path
      - data:/data

volumes:
  data:

networks:
  cloudflared-network:
    external: true
