services:
  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    environment:
      - "PUID={{ ansible_user_uid }}"
      - "PGID={{ ansible_user_gid }}"
      - "TZ=America/Chicago"
    volumes:
      - "config:/config"
      - "media-server:/data"
    configs:
      - source: "{{ sonarr_config.config_name }}"
        target: /config/config.xml
    networks:
      - cloudflared-network
      - prowlarr-network
      - transmission-network
    ports:
      - 8989
    healthcheck:
      # Check if the Sonarr web interface is accessible
      test: ["CMD", "sh", "-c", "wget -q --spider http://127.0.0.1:8989 || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    deploy:
      mode: replicated
      replicas: 1
      labels:
        dev.mattprovost.sonarr.domain: "{{ lookup('service_domain', 'sonarr') }}"
        dev.mattprovost.sonarr.port: 8989
        dev.mattprovost.sonarr.access: "true"
        dev.mattprovost.sonarr.access.admin: "true"
        dev.mattprovost.sonarr.sonarr: "true"
      update_config:
        parallelism: 1
        order: start-first
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 60s
      resources:
        limits:
          cpus: "0.5"
          memory: "512M"
        reservations:
          cpus: "0.25"
          memory: "256M"

networks:
  cloudflared-network:
    external: true
  prowlarr-network:
    external: true
  transmission-network:
    external: true

volumes:
  config:
  media-server:
    external: true

configs:
  {{ sonarr_config.config_name }}:
    external: true
