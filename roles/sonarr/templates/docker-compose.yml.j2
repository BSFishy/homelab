services:
  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    environment:
      - "PUID={{ ansible_user_uid }}"
      - "PGID={{ ansible_user_gid }}"
      - "TZ=America/Chicago"
    volumes:
      - "{{ role_path }}/files/config:/config"
      - "media-server:/data"
    networks:
      - cloudflared-network
      - prowlarr-network
      - transmission-network
    ports:
      - 8989
    deploy:
      mode: global
      labels:
        dev.mattprovost.sonarr.domain: sonarr.home.mattprovost.dev
        dev.mattprovost.sonarr.port: 8989
        dev.mattprovost.sonarr.sonarr: "true"

networks:
  cloudflared-network:
    external: true
  prowlarr-network:
    external: true
  transmission-network:
    external: true

volumes:
  media-server:
    external: true
