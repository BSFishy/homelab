services:
  jellyfin:
    image: "{{ image }}:latest"
    environment:
      - "TZ=America/Chicago"
    volumes:
      - "config:/config"
      - "cache:/cache"
      - "media-server:/data"
      - "/dev/dri:/dev/dri"
    networks:
      - cloudflared-network
      - openldap
    configs:
      - source: "{{ jellyfin_ldap_config.config_name }}"
        target: /tmp/LDAP-Auth.xml
      - source: "{{ jellyfin_config.config_name }}"
        target: /tmp/system.xml
    ports:
      - 8096
      - 1900:1900/udp
      - 7359:7359/udp
    deploy:
      mode: replicated
      replicas: 1
      labels:
        dev.mattprovost.jellyfin.domain: "{{ lookup('service_domain', 'jellyfin') }}"
        dev.mattprovost.jellyfin.port: 8096
        prometheus-job: jellyfin
        prometheus-port: 8096
        prometheus-path: /metrics
      update_config:
        parallelism: 1
        order: stop-first
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 60s
      resources:
        limits:
          cpus: "2.0"
          memory: "4G"
        reservations:
          cpus: "1.0"
          memory: "1G"
    healthcheck:
      # Check if Jellyfin responds on its main web interface port
      test: ["CMD", "curl", "-f", "http://127.0.0.1:8096/"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s

networks:
  cloudflared-network:
    external: true
  openldap:
    external: true

volumes:
  cache:
  config:
  media-server:
    external: true

configs:
  {{ jellyfin_ldap_config.config_name }}:
    external: true
  {{ jellyfin_config.config_name }}:
    external: true
