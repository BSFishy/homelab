services:
  grafana:
    image: grafana/grafana-oss:latest
    volumes:
      - "storage:/var/lib/grafana"
    networks:
      - cloudflared-network
      - openldap
    environment:
      - "GF_AUTH_LDAP_ENABLED=true"
      - "GF_AUTH_LDAP_CONFIG_FILE=/etc/grafana/ldap.toml"
      - "GF_AUTH_LDAP_ALLOW_SIGN_UP=true"
      - "GF_SECURITY_DISABLE_INITIAL_ADMIN_CREATION=true"
    secrets:
      - openldap-password
    configs:
      - source: "{{ grafana_ldap_config.config_name }}"
        target: /etc/grafana/ldap.toml
    healthcheck:
      test: ["CMD", "sh", "-c", "wget -q --spider http://127.0.0.1:3000/-/health || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    deploy:
      mode: replicated
      replicas: 1
      labels:
        dev.mattprovost.grafana.domain: "{{ lookup('service_domain', 'grafana') }}"
        dev.mattprovost.grafana.port: 3000
        dev.mattprovost.grafana.access: "true"
      update_config:
        parallelism: 1
        order: start-first
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 60s
      resources:
        limits:
          cpus: "1.0"
          memory: "512M"
        reservations:
          cpus: "0.25"
          memory: "256M"

volumes:
  storage:

networks:
  cloudflared-network:
    external: true
  openldap:
    external: true

secrets:
  openldap-password:
    external: true

configs:
  {{ grafana_ldap_config.config_name }}:
    external: true
